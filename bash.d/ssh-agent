# ~/.bash.d/ssh-agent: automatic ssh-agent
# 
# Author:  kyau
# Version: 0.3
# Date:    2013-05-11T19:56:45-0400


SSH_ENV="$HOME/.ssh/environment"

function start_agent {
    /usr/bin/ssh-agent | sed 's/^echo/#echo/' > "${SSH_ENV}"
    chmod 600 "${SSH_ENV}"
    . "${SSH_ENV}" > /dev/null
    /usr/bin/ssh-add;
    clear
}

# Start SSH agent, if applicable
if [ $SSH_AGENT_START ]; then
    if [ -f "${SSH_ENV}" ]; then
        . "${SSH_ENV}" > /dev/null
        ps -ef | grep ${SSH_AGENT_PID} | grep ssh-agent$ > /dev/null || {
            start_agent;
        }
    else
        start_agent;
    fi
fi

# vim:ft=sh
