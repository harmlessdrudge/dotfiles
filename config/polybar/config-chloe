[colors]
background = #00292d3e
foreground = #bfc7d5
yellow = #ffcb6b
black = #073642
white = #bfc7d5
red = #ac4142
green = #a9c77d
blue = #82aaff
magenta = #c792ea
cyan = #89ddff
gray = #696969
arch = #1793d1

[settings]
screenchange-reload = true
monitor-struct = true

[bar/master]
monitor = HDMI-0
monitor-fallback = HDMI-0
width = 100%
height = 26
separator = "   "
background = ${colors.background}
foreground = ${colors.foreground}
underline-size = 0
overline-size = 0
font-0 = "M+ 2p Medium:size=10:antialias=true:hinting=true;"
font-1 = "FantasqueSansMono Nerd Font:style=Regular:size=12:antialias=true:hinting=true;1"

[bar/top]
inherit = bar/master
modules-left = menu network wm
modules-center = title
modules-right = cpuclock coretemps volume time
padding-left = 2
padding-right = 2
tray-position = right
tray-padding = 2
tray-transparent = true

[module/volume]
type = internal/volume
format-volume = <ramp-volume> <label-volume>
format-muted = <label-muted>
label-volume = %percentage%%
label-volume-foreground = ${colors.yellow}
label-muted =  MUTE
label-muted-foreground = ${colors.red}
ramp-volume-0 = 
ramp-volume-1 = 
ramp-volume-2 = 
ramp-volume-foreground = ${colors.yellow}
ramp-headphones-0 = 
ramp-headphones-1 = 
ramp-headphones-foreground = ${colors.yellow}

[module/coretemps]
type = custom/script
interval = 1
exec-if = sensors
exec = ~/.config/polybar/tempcores.sh

[module/network]
type = internal/network
interface = eno1
interval = 3
format-connected = <label-connected>
format-disconnected = <label-disconnected>
label-connected = "  %local_ip% "
label-connected-foreground = ${colors.green}
label-disconnected = "  "
label-disconnected-foreground = ${colors.black}

[module/wifi]
type = internal/network
interface = wifi0
interval = 3.0
format-connected = <label-connected>
label-connected ="  %essid%"
label-connected-foreground = ${colors.green}
label-disconnected = "  "
label-disconnected-foreground = ${colors.black}

[module/title]
type = internal/xwindow
label = %title%
format-prefix = "  "
format-prefix-foreground = ${colors.black}
label-maxlen = 75

[module/cpuclock]
type = custom/script
interval = 1
format = <label>
format-prefix = "  "
format-prefix-foreground = ${colors.cyan}
label-foreground = ${colors.cyan}
exec = $HOME/.config/polybar/cpuclock.sh

[module/wm]
type = internal/i3
index-sort = true
enable-click = true
enable-scroll = false
strip-wsnumbers = true
label-focused-foreground = ${colors.arch}
label-focused-padding = 1
label-unfocused-padding = 1
label-visible-padding = 1
label-urgent-foreground = ${colors.red}
label-urgent-padding = 1

[module/time]
type = internal/date
interval = 40
format-prefix = "  "
format-prefix-foreground = ${colors.magenta}
label-foreground = ${colors.magenta}
date = "%I:%M %p"

[module/menu]
type = custom/menu
menu-0-0 = %{F#969696}reboot%{F-}
menu-0-0-exec = systemctl reboot
label-open = %{F#1793d1}   %{F-}
label-close = %{F#800000}   %{F-}
